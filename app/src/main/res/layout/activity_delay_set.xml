<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ares.dialogdemo.DelaySetActivity">

    <include layout="@layout/layout_base_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DDDDDD"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_activity_delay_set_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:text="延时关闭"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <Switch
            android:id="@+id/sw_activity_delay_set_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#DDDDDD"/>
    
    <TextView
        android:id="@+id/tv_activity_delay_set_15"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="15分钟后"
        android:textSize="14sp"
        android:textColor="#8A8A8A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#DDDDDD"/>

    <TextView
        android:id="@+id/tv_activity_delay_set_30"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="30分钟后"
        android:textSize="14sp"
        android:textColor="#8A8A8A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#DDDDDD"/>

    <TextView
        android:id="@+id/tv_activity_delay_set_60"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="60分钟后"
        android:textSize="14sp"
        android:textColor="#8A8A8A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#DDDDDD"/>

    <TextView
        android:id="@+id/tv_activity_delay_set_90"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:text="90分钟后"
        android:textSize="14sp"
        android:textColor="#8A8A8A"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#DDDDDD"/>

    <FrameLayout
        android:id="@+id/fl_activity_delay_set_custom"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_activity_delay_set_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="14dp"
            android:text="自定义"
            android:textSize="14sp"
            android:textColor="#8A8A8A"/>

        <TextView
            android:id="@+id/tv_activity_delay_set_custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="14dp"
            android:textSize="14sp"
            android:textColor="#0011B6"/>

    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_activity_delay_set_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_shape_custom_time_03"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="#0011B6"/>

</LinearLayout>
