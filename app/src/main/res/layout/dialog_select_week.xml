<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_custom_time_01">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="重复"
        android:textSize="18sp"
        android:textColor="#333333"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DDDDDD"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_sunday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周日"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_sunday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_monday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周一"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_monday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_tuesday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周二"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_tuesday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_wednesday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周三"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_wednesday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_thursday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周四"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_thursday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_friday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周五"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_friday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"/>

            <RelativeLayout
                android:id="@+id/rl_dialog_select_week_saturday"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="周六"
                    android:textSize="16sp"
                    android:textColor="#333333"/>

                <CheckBox
                    android:id="@+id/cb_dialog_select_week_saturday"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:button="@null"
                    android:background="@drawable/bg_select_week_01"/>


            </RelativeLayout>

            <Button
                android:id="@+id/btn_dialog_select_week_finish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_shape_custom_time_03"
                android:text="完成"
                android:textSize="16sp"
                android:textColor="#0011B6"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>